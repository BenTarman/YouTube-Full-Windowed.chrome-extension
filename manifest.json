{
  "manifest_version": 2,
  "name": "YouTube Full Windowed",
  "description": "This extension allows you to expand YouTube videos to cover the entire page.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
        "matches": ["https://www.youtube.com/*"],
        "css": ["assets/youtube-full-windowed.css"],
        "js": ["assets/youtube-full-windowed.js"],
        "run_at": "document_end"
    }
  ]
}
