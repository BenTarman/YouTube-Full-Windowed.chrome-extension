{
    "manifest_version": 2,
    "name": "YouTube Full Windowed",
    "description": "This extension allows you to expand YouTube videos to cover the entire page by adding an extra button inside the video player itself.",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "icons/browser.png"
    },
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "author": "Christopher Eklund",
    "homepage_url": "https://github.com/eklundchristopher/YouTube-Full-Windowed.chrome-extension",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "assets/extension.js"
        ]
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "https://www.youtube.com/*"
            ],
            "css": [
                "assets/embed.css"
            ],
            "js": [
                "assets/functions.js",
                "assets/embed.js"
            ]
        }
    ]
}
